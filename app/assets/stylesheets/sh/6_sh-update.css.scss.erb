body {
	background: #fafafa;
	color: #887d75;
	font-family: "Klavika","Helvetica Neue",Helvetica,Arial,sans-serif;
}

.page-loader {
	background-color:#887d75;
	background:#006ec7;
}

.h1,.h2,.h3,.h4,.h5,.h6,h1,h2,h3,h4,h5,h6 {
	font-weight: 300;
	color: #006ec7;
	font-family: "Klavika","Helvetica Neue",Helvetica,Arial,sans-serif;
}

.heading-title h1 {
    margin: 0 0 42px;
	line-height: 64px;
	font-size: 40px;
}

.heading-title span {
    display: inline;
    border-bottom: 1px solid #e8e4e1;
    letter-spacing: .4px;
    padding: 0 0 8px;
	margin-bottom: 1.75rem;
}

a {
    color: #57b6dd;
    text-decoration: none;
}

a:hover {
    color: #006ec7;
    text-decoration: none;
}

.btn {
	font-family: "Klavika","Helvetica Neue",Helvetica,Arial,sans-serif;
}

.btn-lg {
    font-size: 1.25rem;
}

.btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:focus, .btn-primary:visited {
    border-color: #006ec7 !important;
    background-color: #006ec7 !important;
}

.btn-primary:hover {
    border-color: #006ec7;
    background-color: #006ec7;
}

.field-icon {
	float: right;
	padding-right: 28px;
	margin-top: -32px;
	position: relative;
	z-index: 2;
	color: #006ec7;
	cursor: pointer;
}

.form-control {
    padding: .5rem 2rem .5rem .75rem;
	border: 1px solid #e8e4e1;
}

.form-control:hover, .form-control:focus, .form-control:active, .custom-select:hover, .custom-select:focus, .custom-select:active {
    border: 1px solid #006ec7 !important;
}

.custom-toggle .custom-control-label::after {
    background: #e8e4e1;
}

.custom-toggle.custom-toggle-sm .custom-control-label::before {
    top: .1875rem;
    position: absolute;
    display: block;
    width: 2.1875rem;
    height: 1.125rem;
    background: #fff;
    border-radius: 100px;
    border: .0625rem solid #e8e4e1;
}

.custom-toggle .custom-control-input:checked~.custom-control-label::before {
    background: #006ec7;
    border-color: #006ec7;
}

.custom-control-label {
    padding-top: 1px;
}

.custom-select {
    color: #887d75;
    border: 1px solid #e8e4e1;
    font-size: 1rem;
}